@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData ["TITLE"] = "Login"; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Login</title>

    <!-- Incluindo Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="login-container mt-5">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <div class="text-center logo-space">
                        <img src="~/logotcc2.png" alt="Logo da Minha Empresa" width="100">
                    </div>
                    <form asp-controller="Login" asp-action="Entrar" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nome de Usuário</label>
                            <input  type="text" class="form-control" asp-for="Login" id="username" placeholder="Digite seu nome de usuário">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Senha</label>
                            <input type="password" class="form-control" asp-for="Senha" id="password" placeholder="Digite sua senha">
                        </div>
                        <button type="submit" class="btn btn-success w-100">Entrar</button>
                    </form>
                </div>
                </br>
                <div class="card-footer">
                    <p class="text-center">Não tem uma conta? <a class="text-white" asp-area="" asp-controller="CadastroUsuario" asp-action="CadastroUsuario">Crie uma conta</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Incluindo Bootstrap 5 JS (opcional, se você precisar de recursos interativos) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>


