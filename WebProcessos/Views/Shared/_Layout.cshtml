<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProcessos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProcessos.styles.css" asp-append-version="true" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="index.css" />
  </head>
  <body>
    <header>
      <!-- sidebar -->
      <nav
        id="sidebarMenu"
        class="collapse d-lg-block sidebar collapse bg-white"
      >
        <div class="position-sticky">
          <div class="list-group list-group-flush mx-3 mt-4">
            <a
              class="list-group-item list-group-item-action py-2 ripple active"
              aria-current="true"
              asp-area="" 
              asp-controller="Home" 
              asp-action="Index">
              <i class="fas fa-home-alt fa-fw me-3"></i><span>Home</span>
            </a>
            <a
              asp-area="" 
              asp-controller="Cliente" 
              asp-action="Index"
              class="list-group-item list-group-item-action py-2 ripple"
            >
              <i class="fas fa-building fa-fw me-3"></i><span>Clientes</span>
            </a>
            <a
              asp-area="" 
              asp-controller="Servico" 
              asp-action="Index"
              class="list-group-item list-group-item-action py-2 ripple"
            >
              <i class="fas fa-chart-pie fa-fw me-3"></i><span>Serviços</span>
            </a>
            <a
              asp-area="" 
              asp-controller="OrdemServico" 
              asp-action="Index"
              class="list-group-item list-group-item-action py-2 ripple"
            >
              <i class="bi bi-clipboard2-data-fill me-3"></i><span>Ordem de Serviço</span>
            </a>
          </div>
        </div>
      </nav>

      <!-- navbar -->
      <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container-fluid">
          @await Component.InvokeAsync("Menu") 
        </div>
      </nav>
    </header>

    <main role="main">
      <div class="container pt-4">
        @RenderBody()
      </div>
    </main>

    <!-- rodapé aqui (se necessário) -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.9/jquery.inputmask.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false) 
  </body>
</html>
